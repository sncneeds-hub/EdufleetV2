{
  "name": "edufleet-exchange-server",
  "version": "1.0.0",
  "description": "Backend server for EduFleet Exchange - Standalone deployment",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx --watch ./index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "postinstall": "npm run build",
    "lint": "eslint . --ext ts --report-unused-disable-directives",
    "seed": "tsx ./scripts/seed.ts",
    "seed:scenarios": "tsx ./scripts/seedScenarios.ts",
    "seed:users": "tsx ./scripts/seedData/users.ts",
    "seed:vehicles": "tsx ./scripts/seedData/vehicles.ts"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.1",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3"
  }
}
